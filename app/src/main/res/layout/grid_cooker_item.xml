<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="260dp">

        <ImageView

            android:id="@+id/cooker_image"
            android:layout_width="match_parent"
            android:layout_height="277dp"
            android:scaleType="fitXY" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:background="#33000000"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/cooker_name_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:paddingLeft="5dp"
                android:textColor="@color/md_grey_50"
                android:shadowColor="@color/md_black_1000"
                android:shadowDx="4"
                android:shadowDy="4"
                android:shadowRadius="5"
                android:text="Name"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/cooker_address_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/cooker_name_item"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/cooker_name_item"
                android:layout_marginBottom="11dp"
                android:paddingLeft="5dp"
                android:paddingTop="2dp"
                android:shadowColor="@color/md_black_1000"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="4"
                android:text="address"
                android:textColor="@color/md_grey_50"
                android:textSize="12dp" />
        </LinearLayout>


    </RelativeLayout>


</FrameLayout>